{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // this makes it so unused variables are just a warning instead of an error
        "no-unused-vars": "warn",
        // this ignores reacts prop checking
        // seems the proper way is to import PropTypes and declare the props
         "react/prop-types": "off"
    }
}